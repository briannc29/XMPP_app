<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New User"/>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="user name"/>
    <EditText 
        android:id="@+id/username_registration_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter username "/>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="password"/>
    <EditText 
        android:id="@+id/password_registration_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter password"/>
    <Button 
        android:id="@+id/signup_registration_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"/>
    <ImageView 
        android:id="@+id/image_registration_fragment"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_action_person"
        />
    <Button 
        android:id="@+id/takephoto_registration_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a profile picture"/>

</LinearLayout>
